#include <stdio.h>
#include <stdlib.h>
#include <math.h>



int main(){

  int grade;
  int total_sum = 0;
  int count = 0;
  printf("Enter your grade,if grade=0 will stop count: ");
  scanf("%d",&grade);

  while (grade!= 0)
  {
      total_sum = total_sum + grade;
      count++;

      printf("Enter your grade: ");
      scanf("%d",&grade);
  }

  printf("You have entered %d grades!\n",count);
  printf("Your average grade is %.2f\n",(float)total_sum/count);

   return 0;
}
